<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onBackButtonClick"
        android:src="@drawable/baseline_arrow_back_24" />


    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="354dp"
        android:layout_height="352dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/edit_text_background"
        android:scaleType="centerCrop"
        android:src="@drawable/rice_card" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemImage"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Item Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemImage"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:text="Item Price"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Item description -->

    <!-- Seller info -->

    <!-- Seller profile icon -->

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_gray"
        android:text="sfkjskljfoijwflk sajoi fj lkdsjfdsjflkjdsljflsjfl;sufoijewkfj dsljflkdsfdgljds gdshlkg sldgdjflkdsoaflds foiwlk dslfdsfdsfhds"
        android:textSize="16sp" />

    <!-- Seller contact information -->


    <!-- Order Now and Add to Cart buttons -->

    <ImageView
        android:id="@+id/sellerProfileIcon"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_below="@id/itemDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="312dp"
        android:background="@drawable/rounded_img"
        android:contentDescription="Seller Profile Icon"
        android:src="@drawable/tomoo" />

    <TextView
        android:id="@+id/sellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDescription"
        android:layout_alignParentStart="true"

        android:layout_marginStart="105dp"
        android:layout_marginTop="33dp"
        android:text="Seller Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sellerPhone"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerName"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:text="Seller Contact Information"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sellerAddress"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Seller Contact Information"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOrderNow"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20sp"

            android:backgroundTint="@color/lightgreen"
            android:text="Order Now" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightgreen"
            android:text="Add to Cart" />
    </LinearLayout>
</RelativeLayout>
